{
	"apps": [{
		"name": "hubot-attendant",
		"interpreter": "/bin/bash",
		"watch": true,
		"ignore_watch" : ["client/img"],
		"script": "bin/hubot",
		"args": "-a rocketchat",
		"port": "8788",
		"env": {
			"ROCKETCHAT_URL": "https://demo.rocket.chat",
			"ROCKETCHAT_ROOM": "",
			"RESPOND_TO_DM": true,
			"ROCKETCHAT_USER": "attendant_bot",
			"ROCKETCHAT_PASSWORD": "@attendant_bot!",
			"ROCKETCHAT_AUTH": "password",
			"HUBOT_LOG_LEVEL": "debug"
		}
	}]
}
